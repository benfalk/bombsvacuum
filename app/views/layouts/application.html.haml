%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Untitled"

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

%body

  .centerWrap
    .title
      = image_tag 'name.png', alt: 'bombsvacuum'

    = yield

    .score-board
      .header
        .name
          Name
        .time
          Best Time
        .wins
          Wins
        .plays
          Plays
      .people
        - @people = %w(Brad Ben Mike)
        = render :partial => 'person', :collection => @people, :as => :person

    = link_to 'challenge a friend?', '#', 'data-modal-id' => 'challenge', class:'challenge'

  #challenge.modal
    %h2 Challenge a friend!
    %p Something about challenging your friends.
    %a.close-modal x

  #boom.modal
    %h2 BOOM!
    %a.close-modal x

  %footer
    This is a footer and this is where you put all the footer stuff.

  = javascript_include_tag "application"
